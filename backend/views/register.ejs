<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/unauthenticated_nav.ejs') %>
    <div class="container">
      <div class="row">
        <h1>Tic Tac Toe | Register</h1>

        <form method="post" action="/authentication/register">
          <div class="row">
            <div class="col-sm">
              <div class="ms-form-group">
                <label><i class="far fa-user"></i> Username</label>
                <input
                  name="username"
                  autocomplete="username"
                  placeholder="Username"
                />
              </div>
            </div>
            <div class="col-sm">
              <div class="ms-form-group">
                <label><i class="far fa-envelope-open"></i> Email</label>
                <input name="email" autocomplete="email" placeholder="Email" />
              </div>
            </div>
            <div class="col-sm">
              <div class="ms-form-group">
                <label><i class="far fa-key"></i> Password</label>
                <input
                  name="password"
                  type="password"
                  placeholder="Password"
                  autocomplete="current-password"
                />
              </div>
            </div>
            <div>
              <input
                type="submit"
                value="Login"
                class="ms-btn ms-primary ms-fullwidth"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
